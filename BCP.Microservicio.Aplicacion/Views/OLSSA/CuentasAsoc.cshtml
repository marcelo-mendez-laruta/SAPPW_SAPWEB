@{
    ViewData["Title"] = "Cuentas Asociadas: ";
}
    <div class="container" style="background-color:lightgrey">
        <header style="display:none;">
            <h4>Cuentas Asociadas:</h4>
        </header>
        <div class="form-row">
            <div class="col-lg-11">
                <div class="table-responsive bg-white" style="max-height:300px;">
                    <table id="tbOLSSA" class="table table-bordered table-striped">
                        <thead class="thead-light">
                            <tr>
                                <th>Cuentas</th>
                                <th>Moneda</th>
                                <th>Producto</th>
                                <th>Dir Asoc</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="col-lg-1" style="display:none">
                <div class="col-auto">
                    <button id="btOLSSACerrar" type="button" class="col col-lg-12 btn btn-outline-secondary m-1">
                        <i class="fas fa-window-close icono-2x"></i><br />Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $('#tbOLSSA').on('click', 'tbody tr', function () {
            var selected=$(this).hasClass("bg-info");
            if(!selected){
                $("#tbOLSSA tbody tr").removeClass("bg-info");
                $(this).addClass("bg-info");        
            } 
        });
    </script>