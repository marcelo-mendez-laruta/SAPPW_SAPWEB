@using BCP.Microservicio.Aplicacion.Models;
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Apertura de Cuenta CTS: ";
}
<div class="container border border-black" style="background-color:lightgrey">
    <header>
        <h4>Apertura de Cuenta CTS:</h4>
    </header>
    <div class="container border border-dark mb-1">
        <div class="form-row mb-1">
            <div class="col-sm-6">
                <fieldset class="border border-dark">
                    <legend class="w-auto" style="font-size:14px;">
                        Moneda
                    </legend>
                    <div class="container">
                        <div class="form-group form-check">
                            <input class="form-check-input" id="rbNacional" type="radio" name="rbMoneda" checked />
                            <label for="rbNacional" class="form-check-label">
                                Nacional
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" id="ckExtranjera" type="radio" name="rbMoneda" />
                            <label for="rbMoneda" class="form-check-label">
                                Extranjera
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-sm-6">
                <fieldset class="border border-dark">
                    <legend class="w-auto" style="font-size:14px;">
                        Oficina
                    </legend>
                    <div class="container">
                        <div class="form-row">
                            <label for="txtsusurcal" class="col-sm-4 col-form-label">
                                Sucursal:
                            </label>
                            <div class="col-sm-8">
                                <input id="txtsucursal" class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-row mb-1">
                            <label for="txtagencia" class="col-sm-4 col-form-label">
                                Agencia:
                            </label>
                            <div class="col-sm-8">
                                <input id="txtagencia" class="form-control" type="text" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="container mb-1">
            <div class="form-row">
                <label for="txtTProd" class="col-sm-2 col-form-label">
                    Tipo de Producto:
                </label>
                <div class="col-sm-10">
                    <input id="txtTProd" class="form-control" type="text" />
                </div>
            </div>
            <div class="form-row">
                <label for="txtFechV" class="col-sm-2 col-form-label">
                    Fecha de Valuta:
                </label>
                <div class="col-sm-10">
                    <input id="txtFechV" class="form-control" type="text" />
                </div>
            </div>
            <div class="container">
                <div class="form-check-inline form-check">
                    <input id="ckIC" class="form-check-input" type="checkbox" />
                    <label for="ckIC" class="form-check-label">
                        Imprimir contrato
                    </label>
                </div>
                <div class="form-check-inline form-check">
                    <input id="ckAT" class="form-check-input" type="checkbox" />
                    <label for="ckAT" class="form-check-label">
                        Afiliar a tarjeta
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="container mb-1">
        <div class="form-check">
            <input id="ckIOE" class="form-check-input" type="checkbox" />
            <label for="ckIOE" class="form-check-label">
                Ingresar otro empleado
            </label>
        </div>
    </div>
    <div class="d-inline p-1">
        <footer>
            <div class="form-row justify-content-center align-items-center">
                <div class="col-auto m-1">
                    <button class="btn-light btn-sm" onclick="location.href='@Url.Action("Index","Home")'">Cancelar</button>
                </div>
                <div class="col-auto m-1">
                    <button class="btn-light btn-sm" onclick="location.href='@Url.Action("Index","Home")'">Crear Cuenta</button>
                </div>
                <div class="col-auto m-1">
                    <button class="btn-light btn-sm" onclick="location.href='@Url.Action("Index","Home")'">Terminar</button>
                </div>
            </div>
        </footer>
    </div>
</div>
